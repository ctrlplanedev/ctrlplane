                  "$ref": "#/components/parameters/relatableEntityType"
               },
               {
                  "description": "ID of the entity",
                  "in": "path",
                  "name": "entityId",
                  "required": true,
                  "schema": {
                     "type": "string"
                  }
               }
            ],
            "responses": {
               "200": {
                  "content": {
