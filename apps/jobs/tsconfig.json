{
  "extends": "@ctrlplane/tsconfig/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "noEmit": false,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src", "*.ts"],
  "exclude": ["node_modules"]
}
