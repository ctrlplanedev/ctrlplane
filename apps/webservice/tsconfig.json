{
  "extends": "@ctrlplane/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "esnext"
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    "src/app/[workspaceSlug]/(targets)/target-providers/.tsx"
  ],
  "exclude": ["node_modules"]
}
