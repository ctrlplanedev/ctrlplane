{
  "name": "@ctrlplane/docs",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "eslint && pnpm check-links",
    "build:docker": "docker build -f apps/docs/Dockerfile -t docs .",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "check-links": "linkinator http://localhost:3001 --silent --timeout 5000"
  },
  "dependencies": {
    "@ctrlplane/ui": "workspace:*",
    "next": "catalog:",
    "nextra": "^3.0.0",
    "nextra-theme-docs": "^3.0.0",
    "react": "catalog:react18",
    "react-dom": "catalog:react18",
    "react-icons": "^5.3.0",
    "react-youtube": "^10.1.0"
  },
  "devDependencies": {
    "@ctrlplane/eslint-config": "workspace:*",
    "@ctrlplane/prettier-config": "workspace:*",
    "@ctrlplane/tailwind-config": "workspace:*",
    "@ctrlplane/tsconfig": "workspace:*",
    "@types/node": "catalog:node20",
    "@types/react": "catalog:react18",
    "@types/react-dom": "catalog:react18",
    "eslint": "catalog:",
    "linkinator": "^6.1.2",
    "postcss-load-config": "^6.0.1",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "webpack": "^5.95.0"
  },
  "prettier": "@ctrlplane/prettier-config"
}
