{
  "name": "@ctrlplane/terraform-cloud-scanner",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "start": "tsx src/index.ts",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ctrlplane/logger": "workspace:*",
    "@ctrlplane/node-sdk": "workspace:*",
    "@t3-oss/env-core": "^0.10.1",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "handlebars": "^4.7.8",
    "lodash": "catalog:",
    "p-retry": "^6.2.0",
    "ts-is-present": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ctrlplane/eslint-config": "workspace:*",
    "@ctrlplane/prettier-config": "workspace:*",
    "@ctrlplane/tsconfig": "workspace:*",
    "@types/lodash": "catalog:",
    "@types/node": "catalog:node22",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "catalog:",
    "eslint-plugin-vitest": "catalog:",
    "jsdom": "^25.0.0",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "^2.1.2"
  },
  "prettier": "@ctrlplane/prettier-config"
}
