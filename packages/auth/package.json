{
  "name": "@ctrlplane/auth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": {
        "react-server": "./src/index.rsc.ts",
        "default": "./src/index.ts"
      },
      "react-server": "./dist/index.rsc.js",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./src/better/server.ts",
      "default": "./dist/better/server.js"
    },
    "./better": {
      "types": "./src/better/index.ts",
      "default": "./dist/better/index.js"
    },
    "./utils": {
      "types": "./src/utils/index.ts",
      "default": "./dist/utils/index.js"
    },
    "./env": {
      "types": "./src/env.ts",
      "default": "./dist/env.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "1.4.1",
    "@ctrlplane/db": "workspace:*",
    "@ctrlplane/logger": "workspace:*",
    "@ctrlplane/validators": "workspace:*",
    "@node-rs/bcrypt": "^1.10.0",
    "@t3-oss/env-core": "catalog:",
    "better-auth": "^1.4.6",
    "lodash": "catalog:",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "resend": "^4.1.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ctrlplane/eslint-config": "workspace:*",
    "@ctrlplane/prettier-config": "workspace:*",
    "@ctrlplane/tsconfig": "workspace:*",
    "@types/lodash": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@ctrlplane/prettier-config"
}
