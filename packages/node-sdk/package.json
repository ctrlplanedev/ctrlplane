{
  "name": "@ctrlplane/node-sdk",
  "private": false,
  "version": "0.2.5",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:fix": "prettier --write . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc",
    "generate": "pnpm dlx openapi-typescript ../../openapi.v1.json -o src/schema.ts"
  },
  "devDependencies": {
    "@ctrlplane/eslint-config": "workspace:*",
    "@ctrlplane/prettier-config": "workspace:*",
    "@ctrlplane/tsconfig": "workspace:*",
    "@openapitools/openapi-generator-cli": "^2.13.5",
    "@types/node": "catalog:node20",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsup": "^8.2.4",
    "typescript": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@ctrlplane/prettier-config",
  "dependencies": {
    "openapi-fetch": "^0.13.0"
  }
}
